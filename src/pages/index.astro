---
import Button from "../components/Button.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ScheduleCard from "../components/ScheduleCard.astro";
import TeamCard from "../components/TeamCard.astro";
import NewLayout, { projects } from "../layouts/Layout.astro";

import { metadata, teams, schedule } from "../layouts/Layout.astro";

function highlight(text: string, words: string[]) {
  for (const word of words) {
    text = text.split(word).join(`<span class="text-red">${word}</span>`);
  }
  return text;
}
---

<NewLayout title="">
  <div
    class="h-screen bg-cover grid place-items-center shadow-[inset_-100px_-100px_100px_black,inset_100px_100px_100px_black]"
  >
    <img
      src="landing.png"
      class="absolute top-0 w-full h-full object-cover object-top -z-10"
    />
    <h1
      class="text-white text-6xl w-1/2 text-center font-luckiest-guy"
      set:html={highlight(metadata.tagline, ["esports", "onchain"])}
    />
    <div
      class="h-8 w-full bg-gradient-to-b from-[black] to-transparent absolute -bottom-8"
    >
    </div>
  </div>
  <div
    class="px-16 py-32 text-white text-5xl font-luckiest-guy flex flex-col gap-20 items-center"
  >
    Our Games
    <div class="grid grid-cols-4 gap-16 w-full">
      {teams.map((team) => <TeamCard team={team} />)}
    </div>
  </div>
  <div
    class="relative py-32 shadow-[inset_-80px_-80px_100px_black,inset_80px_80px_100px_black]"
  >
    <img
      src="/clips.png"
      alt=""
      class="absolute top-0 w-full h-full object-cover object-center -z-10 brightness-[30%]"
    />
    <div class="grid place-items-center gap-10">
      <h2 class="text-white font-luckiest-guy text-8xl">POG</h2>
      <p class="max-w-[500px] text-center text-[#AAAAAA] text-lg leading-tight">
        POG is a platform by Nouns Esports that lets anyone showcase their clips
        from any multiplayer game and earn real money in the process.
      </p>
      <Button href="https://pog.nouns.gg">Explore</Button>
    </div>
  </div>

  <div
    class="px-16 py-32 text-white text-5xl font-luckiest-guy flex flex-col gap-20 items-center"
  >
    Upcoming Events
    <div class="grid grid-cols-3 gap-16 w-full">
      {schedule.map((event) => <ScheduleCard event={event} />)}
    </div>
  </div>
  <div
    class="px-16 pb-32 text-white text-5xl font-luckiest-guy flex flex-col gap-20 items-center"
  >
    Projects
    <div class="grid grid-cols-4 gap-16 w-full">
      {projects.map((project) => <ProjectCard project={project} />)}
    </div>
  </div>
</NewLayout>
