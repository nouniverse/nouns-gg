---
import Button from "../components/Button.astro";
import Discord from "../components/SocialIcons/Discord.astro";
import Twitch from "../components/SocialIcons/Twitch.astro";
import Twitter from "../components/SocialIcons/Twitter.astro";
import Youtube from "../components/SocialIcons/Youtube.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ScheduleCard from "../components/ScheduleCard.astro";
import GameCard from "../components/GameCard.astro";
import Layout, { projects } from "../layouts/Layout.astro";
import { games, tagline, schedule } from "../layouts/Layout.astro";
import MultiLangText from "../components/MultiLangText/MultiLangText";

function highlight(text: string, words: string[]) {
  for (const word of words) {
    text = text.split(word).join(`<span class="text-red">${word}</span>`);
  }
  return text;
}
---

<Layout title="">
  <div
    class="h-screen bg-cover flex flex-col justify-center items-center gap-8 shadow-[inset_-100px_-100px_100px_black,inset_100px_100px_100px_black] max-sm:shadow-[inset_-40px_-40px_40px_black,inset_40px_40px_40px_black]"
  >
    <img
      src="/landing.webp"
      alt="Nouns Esports landing image"
      class="absolute top-0 select-none w-full h-full object-cover object-top -z-10"
    />
    <h1
      class="text-white text-6xl w-1/2 text-center font-luckiest-guy max-lg:w-full max-lg:px-16 max-sm:px-8 max-md:text-5xl max-[450px]:text-4xl"
      set:html={highlight(tagline, ["esports", "onchain"])}
    />
    <div class="flex gap-8 max-md:flex-col items-center">
      <Button href="/about">
        <MultiLangText en="Learn more" br="Saber mais" client:only />
      </Button>
      <a
        href="https://www.youtube.com/watch?v=SAXzMQ8pPvE"
        rel="noopener noreferrer"
        target="_blank"
        class="text-white font-cabin hover:underline flex gap-2 items-center"
        ><img src="/icons/video.svg" class="w-6 h-6" />Watch the video</a
      >
    </div>
    <div class="flex gap-4 w-fit items-center">
      <Twitch class="w-[26px]" />
      <Twitter class="w-[34px]" />
      <Youtube class="w-9" />
      <Discord class="w-9" />
    </div>
    <div
      class="h-8 w-full bg-gradient-to-b from-black to-transparent absolute -bottom-8"
    >
    </div>
  </div>
  <div
    id="games"
    class="px-16 max-sm:px-0 py-32 max-sm:py-16 text-center text-white text-5xl font-luckiest-guy flex flex-col gap-20 max-sm:gap-10 items-center"
  >
    <MultiLangText en="Our Games" br="Nossos Jogos" client:only />
    <div
      class="flex flex-wrap max-sm:flex-nowrap max-sm:overflow-x-scroll max-sm:justify-start justify-center max-w-[1920px] gap-16 w-full max-2xl:gap-8"
    >
      {
        games
          .sort((a, b) => a.name.localeCompare(b.name))
          .map((game) => <GameCard game={game} />)
      }
    </div>
  </div>
  <div
    class="relative py-32 max-sm:py-20 shadow-[inset_-80px_-80px_100px_black,inset_80px_80px_100px_black]"
  >
    <img
      src="/clips.webp"
      alt="POG image"
      class="absolute top-0 w-full h-full select-none object-cover object-center -z-10 brightness-[40%]"
    />
    <div class="grid place-items-center gap-10 max-sm:gap-6">
      <h2 class="text-white font-luckiest-guy text-8xl max-sm:text-6xl">POG</h2>
      <p
        class="max-w-[500px] px-8 text-center text-[#AAAAAA] text-lg max-sm:text-base leading-tight [text-shadow:black_0_0_30px]"
      >
        <MultiLangText
          en="POG is a platform by Nouns Esports that lets anyone showcase their clips from any multiplayer game and earn real money in the process."
          br="POG é uma plataforma da Nouns Esports que permite que qualquer pessoa mostre seus clipes de qualquer jogo multijogador e ganhe dinheiro real no processo."
          client:only
        />
      </p>
      <Button href="https://pog.nouns.gg">Explore</Button>
    </div>
  </div>

  <div
    class="px-16 max-sm:px-0 py-32 max-sm:py-16 text-white text-5xl text-center font-luckiest-guy flex flex-col gap-20 max-sm:gap-10 items-center"
  >
    <MultiLangText en="Upcoming Events" br="Próximos Eventos" client:only />
    <div
      class="flex flex-wrap max-sm:flex-nowrap max-sm:overflow-x-scroll max-sm:justify-start justify-center max-w-[1920px] gap-16 w-full max-2xl:gap-8"
    >
      {schedule.map((event) => <ScheduleCard event={event} />)}
    </div>
  </div>
  <div
    class="px-16 max-sm:px-0 pb-32 max-sm:pb-16 text-white text-5xl font-luckiest-guy flex flex-col gap-20 max-sm:gap-10 items-center"
  >
    <MultiLangText en="Projects" br="Projetos" client:only />
    <div
      class="flex flex-wrap max-sm:flex-nowrap max-sm:overflow-x-scroll max-sm:justify-start justify-center max-w-[1920px] gap-16 w-full max-2xl:gap-8"
    >
      {projects.map((project) => <ProjectCard project={project} />)}
    </div>
  </div>
</Layout>
