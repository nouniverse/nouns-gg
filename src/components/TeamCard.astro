---
import type { teams } from "../layouts/Layout.astro";

type Props = {
  team: (typeof teams)[number];
};

const { team } = Astro.props;
---

<a
  href={`/${team.name
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .toLowerCase()
    .replace(/ /g, "-")}`}
  style={{ backgroundImage: `url(${team.image})` }}
  class="relative w-full rounded-xl aspect-square group overflow-hidden"
>
  <img
    src={team.image}
    alt=""
    class="object-cover object-center absolute w-full top-0 h-full group-hover:scale-110 transition-transform"
  />
  <div
    class="relative z-10 w-full h-full grid place-items-center shadow-[inset_-20px_-20px_80px_black,inset_20px_20px_80px_black]"
  >
    <p class="drop-shadow-2xl text-5xl font-bebas-neue">{team.name}</p>
  </div>
</a>
