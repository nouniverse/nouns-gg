---
import MobileNav from "./MobileNav";

const path = Astro.url.pathname;
---

<header
  class="sticky top-0 w-full flex max-xl:justify-between items-center gap-16 p-8 z-20"
>
  <a
    href="/"
    draggable={false}
    class="flex gap-4 group items-center cursor-pointer select-none"
  >
    <img
      src="/logo.svg"
      alt="Nouns Esports Logo"
      draggable={false}
      class="group-hover:rotate-[14deg] w-12 max-3xl:w-10 transition-transform duration-150 delay-0"
    />
    <p
      class="text-white font-luckiest-guy text-4xl max-3xl:text-3xl select-none max-[300px]:hidden"
    >
      Nouns
    </p>
  </a>
  <nav
    class="flex items-center gap-6 cursor-pointer text-xl max-3xl:text-lg font-medium select-none max-sm:hidden"
  >
    <a
      href="/teams"
      draggable={false}
      style={{ color: path === "/teams" ? "white" : "auto" }}
      class="hover:text-white transition-colors duration-300"
    >
      Teams
    </a>
    <a
      href="/schedule"
      draggable={false}
      style={{ color: path === "/schedule" ? "white" : "auto" }}
      class="hover:text-white transition-colors duration-300"
    >
      Schedule
    </a>
    <a
      href="https://pog.nouns.gg"
      draggable={false}
      class="hover:text-white transition-colors duration-300"
    >
      POG
    </a>
    <!-- <a
      href="https://shop.nouns.gg"
      draggable={false}
      class="hover:text-white transition-colors duration-300"
    >
      Shop
    </a> -->
  </nav>
  <MobileNav client:load />
</header>
