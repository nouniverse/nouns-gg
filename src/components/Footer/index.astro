---
import Discord from "../SocialIcons/Discord.astro";
import Twitch from "../SocialIcons/Twitch.astro";
import Twitter from "../SocialIcons/Twitter.astro";
import Youtube from "../SocialIcons/Youtube.astro";
import FooterSection from "./FooterSection.astro";
import FooterLink from "./FooterLink.astro";
import Logo from "../Logo.astro";

import { navigation, games, tagline } from "../../layouts/Layout.astro";
---

<footer
  class="flex max-md:flex-col max-md:gap-16 border-[var(--primaryColor)] justify-between items-center p-8 bg-darkgrey border-t-4 relative z-20"
>
  <div class="flex flex-col gap-4 max-md:items-center">
    <a
      href="/"
      draggable={false}
      class="flex gap-3 group items-center cursor-pointer select-none"
    >
      <Logo
        class="text-[var(--primaryColor)] group-hover:rotate-[14deg] w-10 transition-transform duration-150"
      />
      <p class="text-white font-luckiest-guy text-3xl select-none">Nouns</p>
    </a>
    <p class="w-48 max-md:text-center">
      {tagline}
    </p>
  </div>
  <div
    class="flex gap-40 max-lg:gap-20 max-[500px]:gap-8 max-[300px]:flex-col max-[300px]:gap-16"
  >
    <FooterSection title="EXPLORE">
      {
        navigation.map(({ url, name }) => (
          <FooterLink url={url}>{name}</FooterLink>
        ))
      }
    </FooterSection>
    <FooterSection title="GAMES">
      {
        games.map(({ name }) => (
          <FooterLink
            url={`/games/${name
              .normalize("NFD")
              .replace(/[\u0300-\u036f]/g, "")
              .toLowerCase()
              .replace(/ /g, "-")}`}
          >
            {name}
          </FooterLink>
        ))
      }
    </FooterSection>
    <FooterSection title="CONTRIBUTORS">
      <FooterLink
        url="https://nouns-esports.notion.site/Contributor-Dashboard-776148bfb6164afea843ee59ff559236"
      >
        Dashboard
      </FooterLink>
      <FooterLink
        url="https://nouns-esports.notion.site/95a06dc09ca34c93aa945bcb4392b445?v=5782f93244024a64bf04c2284a5ccba4"
      >
        Proposals
      </FooterLink>
      <FooterLink
        url="https://app.safe.global/eth:0x8b45D1CACcb3593E9F1015BA8e97AFB68DE3a0d1/balances"
      >
        Multisig
      </FooterLink>
    </FooterSection>
  </div>
  <div
    class="flex flex-col max-md:flex-row gap-4 items-center justify-center text-white"
  >
    <Twitch class="w-6" />
    <Twitter class="w-7" />
    <Youtube class="w-7" />
    <Discord class="w-7" />
  </div>
</footer>
