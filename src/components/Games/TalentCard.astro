---
import type { games, talent } from "../../layouts/Layout.astro";

type Props = {
  game: (typeof games)[number];
  person: (typeof talent)[number];
};

const { game, person } = Astro.props;

const limitWidth = game.talent.length < 5;
---

<div
  class="relative aspect-video w-full flex max-lg:w-60 max-lg:flex-shrink-0 rounded-xl border-fix group cursor-pointer overflow-hidden"
  style={`background-color:${game.color}; max-width:${
    limitWidth ? "18rem" : "100%"
  }`}
>
  <img
    src={person.image}
    alt={person.name}
    class="w-full pt-8 object-contain z-10 group-hover:-translate-x-[4.5rem] max-lg:-translate-x-[4.5rem] transition-transform"
  />
  <div
    class="absolute flex flex-col right-6 justify-center items-center h-full w-1/2 text-center"
  >
    <h3 class="font-luckiest-guy text-4xl text-white">
      {person.name}
    </h3>
    <p class="font-cabin text-white font-semibold">{person.role}</p>
  </div>
  <div
    class="absolute h-full w-full bg-darkgrey rounded-[0.6rem] group-hover:opacity-0 opacity-1 max-lg:opacity-0 transition-opacity"
  >
  </div>
</div>
